<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Account</servlet-name>
        <servlet-class>AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddActeur</servlet-name>
        <servlet-class>AddActeur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveAuteur</servlet-name>
        <servlet-class>RemoveAuteur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddLivre</servlet-name>
        <servlet-class>AddLivre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveLivre</servlet-name>
        <servlet-class>RemoveLivre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveCartItem</servlet-name>
        <servlet-class>RemoveCartItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveCartItem</servlet-name>
        <url-pattern>/RemoveCartItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveLivre</servlet-name>
        <url-pattern>/admin/RemoveLivre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddLivre</servlet-name>
        <url-pattern>/admin/AddLivre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveAuteur</servlet-name>
        <url-pattern>/admin/RemoveAuteur</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ModifierAuteur</servlet-name>
        <servlet-class>ModifierAuteur</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifierAuteur</servlet-name>
        <url-pattern>/admin/ModifierAuteur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddActeur</servlet-name>
        <url-pattern>/admin/AddActeur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Account</servlet-name>
        <url-pattern>/Account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>


</web-app>